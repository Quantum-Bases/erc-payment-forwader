generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement())
}
model UserWallet{
  id String @id @default(uuid())
  name String
  email String
  publickey String
  privateKey String 

  createTime DateTime @default(now())
  updateTime DateTime @updatedAt

  @@unique([publickey, privateKey])
}

model Trnasections{
  id String @id @default(uuid())
  userId String
  amount String
  recpient String
  currency String
  status String

  createTime DateTime @default(now())
  updateTime DateTime @updatedAt
}